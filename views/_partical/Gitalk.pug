if config.Gitalk
  script(src="https://cdn.jsdelivr.net/npm/gitalk@1/dist/gitalk.min.js")
  script.
    var GitalkDiv = document.createElement("div")
    GitalkDiv.id="gitalk-container";
    document.getElementsByClassName("container")[0].appendChild(GitalkDiv)
    var gitalkConfig = !{JSON.stringify(config.Gitalk)}
    gitalkConfig.id = "#{info._id}"
    var gitalk = new Gitalk(gitalkConfig);
    gitalk.render('gitalk-container');
