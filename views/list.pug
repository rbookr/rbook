//-文章列表
extends layout

block content
  .article-list
    .article-list-table
      table.list-table
        thead
          tr.head-table
            th.th-title 标题
            th.th-tags 标签
            th.th-tags 分类
        tbody
          each item in list
            tr
              td.th-title
                a(href="/article/"+item._id data-tooltip="作者:"+ item.head.author || config.Author.name) #{item.title}
              td tag
              td catalog

